<!-- Validation failure messages -->
<% if @region.errors.any? %>
  <% @region.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Region</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_region" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for region -->
      <div class="form-group">
        <label for="region" class="control-label">
          Region
        </label>

        <input type="text" id="region" name="region" placeholder="Region" class="form-control" value="<%= @region.region %>">
      </div>

      <button class="btn btn-success">
        Create Region
      </button>
      or
      <a href="/regions">Cancel</a>
    </form>
  </div>
</div>
