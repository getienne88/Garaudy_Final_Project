<!-- Validation failure messages -->
<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Company</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_company" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for logo -->
      <div class="form-group">
        <label for="logo" class="control-label">
          Logo
        </label>

        <input type="text" id="logo" name="logo" placeholder="Logo" class="form-control" value="<%= @company.logo %>">
      </div>

      <!-- Label and input for company -->
      <div class="form-group">
        <label for="company" class="control-label">
          Company
        </label>

        <input type="text" id="company" name="company" placeholder="Company" class="form-control" value="<%= @company.company %>">
      </div>

      <!-- Label and input for industry -->
      <div class="form-group">
        <label for="industry" class="control-label">
          Industry
        </label>

        <%= select_tag(:industry, options_from_collection_for_select(Industry.all, :industry, :industry), class: "form-control") %>

      </div>

      <button class="btn btn-success">
        Create Company
      </button>
      or
      <a href="/companies">Cancel</a>
    </form>
  </div>
</div>
