<div class="page-header">
  <h1>
    Companies
    <a href="/companies/new" class="btn btn-lg btn-success">New Company</a>
  </h1>
</div>

<div>
  <%= search_form_for @q do |f| %>
    <p class="lead">Narrow results:</p>

    <div class="form-group">
      <%= f.label :company_or_industry_cont, "Name or industry containing" %>
      <%= f.text_field :company_or_industry_cont, :class => "form-control", :placeholder => "Enter a few letters" %>
    </div>

    <%= f.submit :class => "btn btn-primary btn-block" %>

    <a href="/companies" class="btn btn-default btn-block">Clear filters</a>
  <% end %>
</div>

<div>
  <h1></h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Logo</th>
        <th>Company</th>
        <th>Industry</th>
        <th>Actions</th>
      </tr>

      <% @companies.each do |company| %>
      <tr>
        <td>
          <img src="<%= company.logo %>" height="50" width="100">
        </td>
        <!-- <td><%= company.company %></td> -->
        <td><a href="/companies/<%= company.id %>"><%= company.company %></a></td>
        <td><%= company.industry %></td>
        <td>
          <a href="/companies/<%= company.id %>" class="btn btn-primary">Show</a>
          <a href="/companies/<%= company.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_company/<%= company.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
